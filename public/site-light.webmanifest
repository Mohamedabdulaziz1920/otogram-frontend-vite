  "dir": "rtl",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "share_target": {
    "action": "/upload/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "description",
      "url": "url",
      "files": [
        {
          "name": "video",
          "accept": ["video/mp4", "video/webm", "video/ogg", "video/*"]
        },
        {
          "name": "image",
          "accept": ["image/jpeg", "image/png", "image/webp", "image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+otogram",
      "url": "/share?video=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "video/mp4": [".mp4"],
        "video/webm": [".webm"],
        "video/ogg": [".ogv"],
        "video/quicktime": [".mov"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "related_applications": [],
  "prefer_related_applications": false,
  "permissions": [
    "camera",
    "microphone",
    "storage"
  ],
  "features": [
    "video-upload",
    "video-playback",
    "social-sharing",
    "user-profiles",
    "notifications",
    "offline-mode"
  ]
}
